---
import BaseLayout from './BaseLayout.astro';

const { title, date, cover, summary, headings } = Astro.props;
const tocItems = Array.isArray(headings) ? headings.filter((item) => item.depth <= 3) : [];
---

<BaseLayout title={title}>
  <article class="record-post">
    <header class="post-header">
      <div class="post-bar">
        <span>Record</span>
        <span>{date}</span>
      </div>
      {cover && (
        <div class="cover">
          <img src={cover} alt={title} />
        </div>
      )}
      <h1>{title}</h1>
      {summary && <p class="summary">{summary}</p>}
    </header>

    <div class="post-body">
      <div class="content">
        <slot />
      </div>
      {tocItems.length > 0 && (
        <aside class="toc">
          <div class="toc-title">목차</div>
          <ul>
            {tocItems.map((item) => (
              <li class={`depth-${item.depth}`}>
                <a href={`#${item.slug}`}>{item.text}</a>
              </li>
            ))}
          </ul>
        </aside>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .record-post {
    display: grid;
    gap: 28px;
  }

  .post-header {
    display: grid;
    gap: 16px;
    text-align: center;
  }

  .post-bar {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  .cover {
    border-radius: 18px;
    overflow: hidden;
    border: 1px solid rgba(27, 26, 23, 0.12);
    background: #f2e7d5;
  }

  .cover img {
    width: 100%;
    height: 360px;
    object-fit: cover;
    display: block;
  }

  h1 {
    margin: 0;
    font-family: 'JN_leanring', var(--font-display);
    font-weight: 300;
    font-size: clamp(2rem, 4.5vw, 3.2rem);
    line-height: 1.1;
  }

  .summary {
    margin: 0 auto;
    max-width: 640px;
    color: var(--color-muted);
    line-height: 1.6;
  }

  .post-body {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 200px;
    gap: 32px;
    align-items: start;
  }

  .content :global(p) {
    margin: 0 0 14px;
    color: var(--color-muted);
    line-height: 1.7;
  }

  .content :global(h2),
  .content :global(h3) {
    margin: 26px 0 12px;
    font-family: 'JN_leanring', var(--font-display);
    font-weight: 300;
  }

  .toc {
    position: sticky;
    top: 24px;
    background: rgba(255, 255, 255, 0.45);
    border: 1px solid rgba(27, 26, 23, 0.12);
    border-radius: 14px;
    padding: 16px;
  }

  .toc-title {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-muted);
    margin-bottom: 12px;
  }

  .toc ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 8px;
  }

  .toc a {
    text-decoration: none;
    color: inherit;
    font-size: 0.9rem;
  }

  .toc .depth-3 a {
    color: var(--color-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 980px) {
    .post-body {
      grid-template-columns: 1fr;
    }

    .toc {
      position: static;
      order: -1;
    }
  }
</style>
