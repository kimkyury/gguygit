---
import BaseLayout from './BaseLayout.astro';
import BookReader from '../components/BookReader.astro';

const { title, date, cover, summary } = Astro.props;
---

<BaseLayout title={title}>
  <article class="thoughts-post">
    <header class="post-header">
      <div class="post-bar">
        <span>Thoughts</span>
        <span>{date}</span>
      </div>
      {cover && (
        <div class="cover">
          <img src={cover} alt={title} />
        </div>
      )}
      <h1>{title}</h1>
      {summary && <p class="summary">{summary}</p>}
    </header>

    <BookReader summary={summary}>
      <slot />
    </BookReader>
  </article>
</BaseLayout>

<style>
  .thoughts-post {
    display: grid;
    gap: 28px;
  }

  .post-header {
    display: grid;
    gap: 16px;
    text-align: center;
  }

  .post-bar {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  .cover {
    border-radius: 18px;
    overflow: hidden;
    border: 1px solid rgba(27, 26, 23, 0.12);
    background: #f2e7d5;
  }

  .cover img {
    width: 100%;
    height: 360px;
    object-fit: cover;
    display: block;
  }

  h1 {
    margin: 0;
    font-family: 'JN_leanring', var(--font-display);
    font-weight: 300;
    font-size: clamp(2rem, 4.5vw, 3.2rem);
    line-height: 1.1;
  }

  .summary {
    margin: 0 auto;
    max-width: 640px;
    color: var(--color-muted);
    line-height: 1.6;
  }
</style>
