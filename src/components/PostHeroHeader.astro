---
interface Props {
  category: string;
  title: string;
  date?: string;
  cover?: string;
  summary?: string;
  rightMeta?: string;
}

const { category, title, date, cover, summary, rightMeta } = Astro.props as Props;
const barRight = rightMeta ?? date ?? '';
---

<header class="post-header">
  <div class="post-bar">
    <span>{category}</span>
    <span>{barRight}</span>
  </div>
  {cover && (
    <div class="cover">
      <img src={cover} alt={title} />
    </div>
  )}
  <h1>{title}</h1>
  {summary && <p class="summary">{summary}</p>}
</header>

<style>
  .post-header {
    display: grid;
    gap: 16px;
    text-align: center;
  }

  .post-bar {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  .cover {
    border-radius: 18px;
    overflow: hidden;
    border: 1px solid rgba(27, 26, 23, 0.12);
    background: #f2e7d5;
  }

  .cover img {
    width: 100%;
    height: 360px;
    object-fit: cover;
    display: block;
  }

  h1 {
    margin: 0;
    font-family: 'JN_leanring', var(--font-display);
    font-weight: 300;
    font-size: clamp(2rem, 4.5vw, 3.2rem);
    line-height: 1.1;
  }

  .summary {
    margin: 0 auto;
    max-width: 640px;
    color: var(--color-muted);
    line-height: 1.6;
  }
</style>
