---
const navItems: { href: string; label: string }[] = [
  { href: '/thoughts', label: '단상' },
  { href: '/meals', label: '끼니' },
  { href: '/notes', label: '앎' },
  { href: '/echoes', label: '여운' },
  { href: '/bundles', label: '보따리' }
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) =>
  currentPath === href || (href !== '/' && currentPath.startsWith(`${href}/`));
---

<nav class="site-nav" aria-label="Primary">
  <ul>
    {navItems.map((item) => (
      <li>
        <a
          href={item.href}
          class:list={{ active: isActive(item.href) }}
          aria-current={isActive(item.href) ? 'page' : undefined}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .site-nav {
    max-width: var(--page-width);
    margin: 26px auto 22px;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(27, 26, 23, 0.12);
  }

  .site-nav ul {
    display: flex;
    gap: 18px;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.95rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .site-nav li {
    position: relative;
    display: flex;
    align-items: center;
  }

  .site-nav li:not(:last-child)::after {
    content: "·";
    margin-left: 14px;
    color: var(--color-muted);
  }

  .site-nav a {
    position: relative;
    color: inherit;
    text-decoration: none;
    padding: 4px 2px 8px;
    font-weight: 500;
  }

  .site-nav a::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2px;
    background: currentColor;
    transform: scaleX(0.2);
    transform-origin: left;
    opacity: 0;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .site-nav a:hover::after,
  .site-nav a.active::after {
    transform: scaleX(1);
    opacity: 1;
  }
</style>
