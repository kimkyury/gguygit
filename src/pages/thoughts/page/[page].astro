---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import CategoryIndexHeader from '../../../components/CategoryIndexHeader.astro';

const THOUGHTS_TITLE = '\uB2E8\uC0C1';
const THOUGHTS_INDEX_DESC = '\uADF8\uB54C\uADF8\uB54C \uB5A0\uC624\uB978 \uC0DD\uAC01\uC758 \uD1A0\uB9C9\uD1A0\uB9C9';
const THOUGHTS_PAGE_DESC =
  '\uB2E8\uC0C1 \uCE74\uD14C\uACE0\uB9AC: \uADF8\uB54C\uADF8\uB54C \uB5A0\uC624\uB978 \uC0DD\uAC01\uC758 \uD1A0\uB9C9\uD1A0\uB9C9\uC744 \uAE30\uB85D\uD55C \uAE00 \uBAA9\uB85D\uC785\uB2C8\uB2E4.';

export async function getStaticPaths() {
  const pageSize = 7;
  const entries = (await getCollection('thoughts')).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
  );
  const totalPages = Math.ceil(entries.length / pageSize);

  if (totalPages <= 1) {
    return [];
  }

  return Array.from({ length: totalPages - 1 }, (_, idx) => {
    const currentPage = idx + 2;
    const start = (currentPage - 1) * pageSize;
    const pageEntries = entries.slice(start, start + pageSize);
    return {
      params: { page: String(currentPage) },
      props: { entries: pageEntries, currentPage, totalPages }
    };
  });
}

const { entries, currentPage, totalPages } = Astro.props;
const formatDate = (date: Date) =>
  date.toISOString().slice(0, 10).replace(/-/g, '.');
const getPageHref = (page: number) =>
  page === 1 ? '/thoughts' : `/thoughts/page/${page}`;
---

<BaseLayout title="Thoughts" description={THOUGHTS_PAGE_DESC}>
  <section class="thoughts-list">
    <CategoryIndexHeader title={THOUGHTS_TITLE} description={THOUGHTS_INDEX_DESC} />

    <ul class="list">
      {entries.map((entry) => (
        <li>
          <a href={`/thoughts/${entry.slug}`}>
            <span class="date">{formatDate(entry.data.date)}</span>
            <span class="title">{entry.data.title}</span>
            {entry.data.summary && <span class="summary">{entry.data.summary}</span>}
          </a>
        </li>
      ))}
    </ul>

    <nav class="pagination" aria-label="Thoughts pagination">
      {currentPage > 1 ? (
        <a class="page-link" href={getPageHref(currentPage - 1)}>Previous</a>
      ) : (
        <span class="page-link is-disabled">Previous</span>
      )}
      <p class="page-state">{currentPage} / {totalPages}</p>
      {currentPage < totalPages ? (
        <a class="page-link" href={getPageHref(currentPage + 1)}>Next</a>
      ) : (
        <span class="page-link is-disabled">Next</span>
      )}
    </nav>
  </section>
</BaseLayout>

<style>
  .thoughts-list {
    display: grid;
    gap: 24px;
  }

  .list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 12px;
  }

  .list li {
    border-top: 1px solid rgba(27, 26, 23, 0.12);
  }

  .list a {
    display: grid;
    grid-template-columns: 110px 1fr;
    gap: 12px;
    padding: 12px 0;
    text-decoration: none;
    color: inherit;
  }

  .date {
    font-size: 0.8rem;
    color: var(--color-muted);
    letter-spacing: 0.14em;
    text-transform: uppercase;
  }

  .title {
    font-size: 1.05rem;
    font-weight: 500;
  }

  .summary {
    grid-column: 2 / -1;
    color: var(--color-muted);
    font-size: 0.9rem;
  }

  .pagination {
    margin-top: 10px;
    padding-top: 14px;
    border-top: 1px solid rgba(27, 26, 23, 0.12);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .page-link {
    text-decoration: none;
    color: inherit;
    font-size: 0.84rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    padding: 8px 10px;
    border-radius: 999px;
    border: 1px solid rgba(27, 26, 23, 0.18);
    transition: border-color 0.18s ease, background-color 0.18s ease;
  }

  .page-link:hover {
    border-color: rgba(27, 26, 23, 0.36);
    background: rgba(27, 26, 23, 0.04);
  }

  .page-link.is-disabled {
    color: rgba(27, 26, 23, 0.35);
    border-color: rgba(27, 26, 23, 0.09);
    background: rgba(27, 26, 23, 0.03);
    pointer-events: none;
  }

  .page-state {
    margin: 0;
    font-size: 0.78rem;
    color: var(--color-muted);
    letter-spacing: 0.14em;
    text-transform: uppercase;
  }

  @media (max-width: 640px) {
    .pagination {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
