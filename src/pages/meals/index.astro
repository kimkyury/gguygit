---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CategoryIndexHeader from '../../components/CategoryIndexHeader.astro';
import { getCollection } from 'astro:content';

const entries = (await getCollection('meals')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const mealFallbackCovers = [
  '/images/meal/pasta1.jpg',
  '/images/meal/pasta2.jpg',
  '/images/meal/pasta3.jpg',
  '/images/meal/pasta4.jpg',
  '/images/meal/pasta5.jpg',
  '/images/meal/pasta6.jpg',
  '/images/meal/meals-1.png'
];
const formatDate = (date: Date) =>
  date.toISOString().slice(0, 10).replace(/-/g, '.');
---

<BaseLayout title="Meals" description="끼니 카테고리: 식단과 식습관 기록을 아카이브합니다.">
  <section class="meals-gallery">
    <CategoryIndexHeader title="끼니" description="입력:식단, 출력:신체" />

    {entries.length === 0 ? (
      <p class="empty">아직 등록된 끼니 포스팅이 없습니다.</p>
    ) : (
      <ul class="gallery-grid">
        {entries.map((entry, index) => (
          <li>
            <a href={`/meals/${entry.slug}`} class="gallery-card">
              <div class="thumb">
                <img
                  src={entry.data.cover ?? mealFallbackCovers[index % mealFallbackCovers.length]}
                  alt={entry.data.title}
                  loading="lazy"
                />
                <div class="hover-overlay">
                  <p class="hover-date">{formatDate(entry.data.date)}</p>
                  {entry.data.summary && <p class="hover-summary">{entry.data.summary}</p>}
                </div>
              </div>
              <div class="meta">
                <h2>{entry.data.title}</h2>
                {entry.data.tags && entry.data.tags.length > 0 && (
                  <ul class="tags">
                    {entry.data.tags.slice(0, 3).map((tag) => (
                      <li>{tag}</li>
                    ))}
                  </ul>
                )}
              </div>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .meals-gallery {
    --meal-ink: #1f2a24;
    --meal-muted: #5e6a62;
    --meal-line: rgba(68, 79, 71, 0.18);
    --meal-line-strong: rgba(68, 79, 71, 0.28);
    --meal-surface: #f7f3eb;
    --meal-surface-strong: #fffdf8;
    --meal-chip-bg: rgba(106, 126, 110, 0.12);
    --meal-chip-line: rgba(86, 102, 90, 0.24);
    display: grid;
    gap: 24px;
  }

  .gallery-grid {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 20px;
  }

  .gallery-card {
    display: grid;
    gap: 0;
    text-decoration: none;
    color: inherit;
    border: 1px solid var(--meal-line);
    border-radius: 22px;
    overflow: hidden;
    background: linear-gradient(145deg, var(--meal-surface-strong), var(--meal-surface));
    box-shadow: 0 14px 30px rgba(26, 37, 30, 0.07);
    transition: transform 0.24s ease, border-color 0.24s ease, box-shadow 0.24s ease;
    position: relative;
  }

  .gallery-card::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    height: 1px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.92), rgba(255, 255, 255, 0));
  }

  .gallery-card:hover {
    transform: translateY(-6px);
    border-color: var(--meal-line-strong);
    box-shadow: 0 22px 38px rgba(24, 33, 28, 0.13);
  }

  .thumb {
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--meal-line);
    background: #ece3d2;
    aspect-ratio: 5 / 4;
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transform: scale(1.002);
    transition: transform 0.42s ease, filter 0.42s ease;
  }

  .gallery-card:hover .thumb img {
    transform: scale(1.045);
    filter: saturate(1.08) brightness(0.68);
  }

  .hover-overlay {
    margin: 0;
    position: absolute;
    inset: 0;
    display: grid;
    align-content: end;
    gap: 7px;
    padding: 14px 14px;
    color: #f4f7fb;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.25s ease, transform 0.25s ease;
    pointer-events: none;
    background: linear-gradient(180deg, rgba(23, 28, 25, 0) 28%, rgba(23, 28, 25, 0.82) 100%);
  }

  .gallery-card:hover .hover-overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .hover-date {
    margin: 0;
    font-size: 0.67rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(244, 247, 251, 0.84);
  }

  .hover-summary {
    margin: 0;
    font-size: 0.84rem;
    line-height: 1.5;
    color: rgba(244, 247, 251, 0.92);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .meta {
    display: grid;
    gap: 12px;
    padding: 14px 14px 15px;
  }

  h2 {
    margin: 0;
    font-family: 'Pretendard', var(--font-body);
    font-weight: 670;
    font-size: 1.02rem;
    line-height: 1.38;
    letter-spacing: -0.015em;
    color: var(--meal-ink);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tags li {
    font-size: 0.66rem;
    font-weight: 560;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #3f4f45;
    background: linear-gradient(160deg, rgba(255, 255, 255, 0.84), rgba(232, 239, 232, 0.72));
    border: 1px solid var(--meal-chip-line);
    border-radius: 999px;
    padding: 6px 10px;
    line-height: 1;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.55);
  }

  .empty {
    color: var(--meal-muted);
    border: 1px dashed var(--meal-line);
    border-radius: 16px;
    padding: 18px;
    background: rgba(255, 255, 255, 0.38);
  }

  @media (max-width: 980px) {
    .gallery-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .meta {
      padding: 12px 12px 13px;
    }
  }
</style>
