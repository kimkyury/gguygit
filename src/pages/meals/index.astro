---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CategoryIndexHeader from '../../components/CategoryIndexHeader.astro';
import { getCollection } from 'astro:content';

const entries = (await getCollection('meals')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const mealFallbackCovers = [
  '/images/meals-1.png',
  '/images/meals-2.png',
  '/images/meals-3.png',
  '/images/meals-4.png'
];
const formatDate = (date: Date) =>
  date.toISOString().slice(0, 10).replace(/-/g, '.');
---

<BaseLayout title="Meals" description="끼니 카테고리: 식단과 식습관 기록을 아카이브합니다.">
  <section class="meals-gallery">
    <CategoryIndexHeader title="끼니" description="입력:식단, 출력:신체" />

    {entries.length === 0 ? (
      <p class="empty">아직 등록된 끼니 포스팅이 없습니다.</p>
    ) : (
      <ul class="gallery-grid">
        {entries.map((entry, index) => (
          <li>
            <a href={`/meals/${entry.slug}`} class="gallery-card">
              <div class="thumb">
                <img
                  src={entry.data.cover ?? mealFallbackCovers[index % mealFallbackCovers.length]}
                  alt={entry.data.title}
                  loading="lazy"
                />
                <div class="hover-overlay">
                  <p class="hover-date">{formatDate(entry.data.date)}</p>
                  <p class="hover-title">{entry.data.title}</p>
                  {entry.data.summary && <p class="hover-summary">{entry.data.summary}</p>}
                </div>
              </div>
              <div class="meta">
                <h2>{entry.data.title}</h2>
                {entry.data.tags && entry.data.tags.length > 0 && (
                  <ul class="tags">
                    {entry.data.tags.slice(0, 3).map((tag) => (
                      <li>{tag}</li>
                    ))}
                  </ul>
                )}
              </div>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .meals-gallery {
    display: grid;
    gap: 24px;
  }

  .gallery-grid {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 16px;
  }

  .gallery-card {
    display: grid;
    gap: 14px;
    text-decoration: none;
    color: inherit;
    border: 1px solid rgba(43, 47, 56, 0.14);
    border-radius: 16px;
    padding: 12px;
    background: linear-gradient(180deg, #f8f9fb 0%, #f2f4f7 100%);
    transition: transform 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .gallery-card:hover {
    transform: translateY(-3px);
    border-color: rgba(43, 47, 56, 0.26);
    box-shadow: 0 12px 24px rgba(24, 30, 40, 0.1);
  }

  .thumb {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(27, 26, 23, 0.12);
    background: #efe7da;
    aspect-ratio: 5 / 4;
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transform: scale(1.001);
    transition: transform 0.25s ease, filter 0.25s ease;
  }

  .gallery-card:hover .thumb img {
    transform: scale(1.035);
    filter: brightness(0.42);
  }

  .hover-overlay {
    margin: 0;
    position: absolute;
    inset: 0;
    display: grid;
    align-content: end;
    gap: 8px;
    padding: 14px 12px;
    color: #f4f7fb;
    opacity: 0;
    transform: translateY(8px);
    transition: opacity 0.22s ease, transform 0.22s ease;
    pointer-events: none;
    background: linear-gradient(180deg, rgba(18, 22, 30, 0) 18%, rgba(18, 22, 30, 0.75) 100%);
  }

  .gallery-card:hover .hover-overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .hover-date {
    margin: 0;
    font-size: 0.68rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(244, 247, 251, 0.84);
  }

  .hover-title {
    margin: 0;
    font-size: 0.98rem;
    font-weight: 620;
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .hover-summary {
    margin: 0;
    font-size: 0.86rem;
    line-height: 1.45;
    color: rgba(244, 247, 251, 0.9);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .meta {
    display: grid;
    gap: 8px;
    padding: 2px 2px 6px;
  }

  h2 {
    margin: 0;
    font-family: 'Pretendard', var(--font-body);
    font-weight: 650;
    font-size: 1.06rem;
    line-height: 1.4;
    letter-spacing: -0.01em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .tags {
    list-style: none;
    margin: 2px 0 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .tags li {
    font-size: 0.72rem;
    color: #3d4654;
    background: #eef1f5;
    border: 1px solid rgba(43, 47, 56, 0.1);
    border-radius: 999px;
    padding: 4px 8px;
    line-height: 1;
  }

  .empty {
    color: var(--color-muted);
  }

  @media (max-width: 980px) {
    .gallery-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
