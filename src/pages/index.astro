  </div>
</BaseLayout>

<script>
  document.documentElement.classList.add('js');

  const revealTargets = document.querySelectorAll('.reveal');
  const revealAll = () => {
    revealTargets.forEach((target) => target.classList.add('is-visible'));
  };

  if (!('IntersectionObserver' in window)) {
    revealAll();
  } else {
    const revealObserver = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting) return;
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        });
      },
      { root: null, rootMargin: '0px 0px -30% 0px', threshold: 0 }
    );

    revealTargets.forEach((target) => revealObserver.observe(target));

    const revealOnBottom = () => {
      const doc = document.documentElement;
      const nearBottom = window.innerHeight + window.scrollY >= doc.scrollHeight - 4;
      if (nearBottom) {
        revealAll();
      }
    };

    window.addEventListener('scroll', revealOnBottom, { passive: true });
    window.addEventListener('resize', revealOnBottom);
  }

</script>

<style>
  .home {
    display: flex;
    flex-direction: column;
    gap: 48px;
    position: relative;
  }

  .home::before {
    content: '';
    position: absolute;
    top: -120px;
    right: -40px;
    width: 240px;
    height: 240px;
    background: radial-gradient(circle, rgba(228, 88, 38, 0.18), transparent 70%);
    border-radius: 50%;
    z-index: -1;
  }

  .home::after {
    content: '';
    position: absolute;
    bottom: -80px;
    left: -80px;
    width: 220px;
    height: 220px;
    background: radial-gradient(circle, rgba(240, 165, 0, 0.18), transparent 70%);
    border-radius: 50%;
    z-index: -1;
  }

  .hero {
    display: grid;
    gap: 24px;
  }

  .reveal {
    opacity: 1;
    transform: translateY(0);
  }

  html.js .reveal {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  html.js .reveal.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  html.js .delay-1 {
    transition-delay: 0.1s;
  }

  html.js .delay-2 {
    transition-delay: 0.2s;
  }

  html.js .delay-3 {
    transition-delay: 0.3s;
  }

  .hero-header {
    display: grid;
    gap: 14px;
  }

  .eyebrow {
    font-size: 12px;
    letter-spacing: 0.26em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  h1 {
    margin: 0;
    font-family: 'JN_leanring', 'Junction', sans-serif;
    font-weight: 300;
    font-size: clamp(1.6rem, 3.6vw, 2.6rem);
    line-height: 1.1;
    letter-spacing: -0.01em;
    text-transform: uppercase;
  }

  .hero-caption {
    display: grid;
    gap: 8px;
    font-size: 0.98rem;
    color: var(--color-muted);
    max-width: 520px;
  }

  .hero-media {
    position: relative;
  }

  .hero-list {
    list-style: none;
    display: flex;
    gap: 16px;
    padding: 0;
    margin: 0;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
  }

  .hero-list::-webkit-scrollbar {
    display: none;
  }

  .hero-list li {
    flex: 0 0 33.333%;
    min-width: 33.333%;
    scroll-snap-align: start;
  }

  .hero-media img {
    display: block;
    width: 100%;
    height: 300px;
    filter: saturate(0.9);
    transition: transform 0.35s ease;
    object-fit: cover;
    border-radius: var(--radius-lg);
  }

  .hero-list li:hover img {
    transform: scale(1.05);
  }

  .hero-scroll {
    display: flex;
    justify-content: center;
    color: var(--color-muted);
    font-size: 18px;
  }

  .block {
    display: grid;
    gap: 0;
  }

  .accordion {
    position: relative;
    margin-top: -44px;
  }

  .accordion:first-of-type {
    margin-top: 0;
  }

  .accordion:nth-of-type(1) {
    z-index: 1;
  }

  .accordion:nth-of-type(2) {
    z-index: 2;
  }

  .accordion:nth-of-type(3) {
    z-index: 3;
  }

  .accordion summary {
    list-style: none;
    cursor: pointer;
    display: grid;
    grid-template-columns: 34px 1fr auto;
    align-items: center;
    gap: 8px;
    font-family: 'JN_leanring', var(--font-display);
    font-weight: 300;
    font-size: 1.6rem;
    letter-spacing: 0.01em;
    text-transform: none;
    padding: 15px 14px 12px;
    background: var(--color-paper);
    border: none;
    border-top: 1px solid rgba(27, 26, 23, 0.12);
    border-left: 1px solid rgba(27, 26, 23, 0.12);
    border-right: 1px solid rgba(27, 26, 23, 0.12);
    border-radius: 16px;
    box-shadow: 0 -6px 12px rgba(27, 26, 23, 0.08);
    position: relative;
  }

  .accordion summary::before {
    content: "";
    position: absolute;
    top: -11px;
    left: 14px;
    width: 92px;
    height: 12px;
    background: var(--color-paper);
    border: none;
    border-top: 1px solid rgba(27, 26, 23, 0.12);
    border-left: 1px solid rgba(27, 26, 23, 0.12);
    border-right: 1px solid rgba(27, 26, 23, 0.12);
    border-bottom: none;
    border-radius: 10px 10px 0 0;
  }

  .accordion summary::-webkit-details-marker {
    display: none;
  }

  .summary-index {
    font-size: 0.7rem;
    color: var(--color-muted);
    letter-spacing: 0.2em;
    font-family: var(--font-display);
  }

  .summary-title {
    font-size: 1.75rem;
    font-weight: 400;
  }

  .accordion summary::after {
    content: "v";
    font-size: 0.9rem;
    color: var(--color-muted);
    transform: rotate(0deg);
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .accordion[open] summary {
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    border-bottom-color: transparent;
  }

  .accordion[open] summary::after {
    transform: rotate(180deg);
    color: var(--color-ink);
  }

  .accordion-content {
    padding: 10px 12px 12px;
    background: var(--color-paper);
    border: none;
    border-top: none;
    border-radius: 0 0 16px 16px;
  }

  .post-list {
    list-style: none;
    margin: 0;
    padding: 0;
    border-top: 1px solid rgba(27, 26, 23, 0.12);
  }

  .post-list li {
    display: grid;
    grid-template-columns: 40px 1fr auto;
    gap: 12px;
    padding: 14px 0;
    border-bottom: 1px solid rgba(27, 26, 23, 0.12);
    align-items: center;
  }

  .post-index {
    font-weight: 600;
    color: var(--color-muted);
  }

  .post-title {
    font-weight: 600;
  }

  .post-meta {
    font-size: 0.9rem;
    color: var(--color-muted);
  }

  .post-date {
    font-size: 0.85rem;
    color: var(--color-muted);
  }

  .stars {
    font-size: 0.85rem;
    color: var(--color-accent);
    margin-left: 4px;
  }

  .gallery-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 18px;
  }

  .gallery-card {
    background: rgba(255, 255, 255, 0.35);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 12px 26px rgba(27, 26, 23, 0.08);
    display: grid;
  }

  .gallery-thumb {
    height: 120px;
    overflow: hidden;
  }

  .gallery-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.9);
    transition: transform 0.35s ease;
  }

  .gallery-card:hover .gallery-thumb img {
    transform: scale(1.1);
  }

  .gallery-info {
    padding: 12px 12px 14px;
    display: grid;
    gap: 6px;
  }

  .gallery-info h3 {
    margin: 0;
    font-size: 0.95rem;
  }

  .gallery-info p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-muted);
  }

  .gallery-meta {
    font-size: 0.82rem;
  }

  .culture-card {
    display: grid;
    grid-template-columns: minmax(220px, 0.6fr) 1fr;
    gap: 18px;
    background: rgba(255, 255, 255, 0.35);
    border-radius: var(--radius-lg);
    padding: 14px;
    align-items: center;
    box-shadow: 0 12px 26px rgba(27, 26, 23, 0.08);
    overflow: hidden;
  }

  .culture-card img {
    width: 100%;
    border-radius: var(--radius-md);
    object-fit: cover;
    transition: transform 0.35s ease;
  }

  .culture-card:hover img {
    transform: scale(1.1);
  }

  .culture-text h3 {
    margin: 0 0 8px;
    font-size: 1rem;
  }

  .culture-text p {
    margin: 0 0 8px;
    color: var(--color-muted);
    line-height: 1.5;
  }

  @media (max-width: 760px) {
    .post-list li {
      grid-template-columns: 32px 1fr;
    }

    .post-date {
      display: none;
    }

    .culture-card {
      grid-template-columns: 1fr;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    html.js .reveal {
      transition: none;
      opacity: 1;
      transform: none;
    }

    .hero-media img,
    .gallery-thumb img,
    .culture-card img {
      transition: none;
      transform: none;
    }
  }
</style>
