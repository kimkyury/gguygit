---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const entries = (await getCollection('culture')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const formatDate = (date) => date.toISOString().slice(0, 10).replace(/-/g, '.');
const fallbackCovers = ['/images/culture-cover-1.png'];
const getYouTubeId = (url) => {
  if (!url) return null;
  try {
    const parsed = new URL(url);
    if (parsed.hostname.includes('youtu.be')) {
      return parsed.pathname.replace('/', '');
    }
    if (parsed.searchParams.has('v')) {
      return parsed.searchParams.get('v');
    }
    if (parsed.pathname.includes('/embed/')) {
      return parsed.pathname.split('/embed/')[1];
    }
    if (parsed.pathname.includes('/shorts/')) {
      return parsed.pathname.split('/shorts/')[1];
    }
    return null;
  } catch {
    return null;
  }
};
---

<BaseLayout title="Culture">
  <section class="culture-list">
    <header class="list-header">
      <h1>Culture</h1>
      <p>Mugic, Movie, Book, People...</p>
    </header>

    {entries.length === 0 ? (
      <p class="empty">아직 등록된 문화감상 포스팅이 없습니다.</p>
    ) : (
      <ul class="list">
        {entries.map((entry, index) => (
          <li>
            <a class="row" href={`/culture/${entry.slug}`}>
              <div class="thumb">
                {entry.data.youtube ? (
                  (() => {
                    const videoId = getYouTubeId(entry.data.youtube);
                    return videoId ? (
                      <iframe
                        class="thumb-video"
                        src={`https://www.youtube.com/embed/${videoId}?controls=1&playsinline=1`}
                        title={entry.data.title}
                        allow="encrypted-media; picture-in-picture"
                        allowfullscreen
                      ></iframe>
                    ) : (
                      <img
                        src={entry.data.cover ?? fallbackCovers[index % fallbackCovers.length]}
                        alt={entry.data.title}
                      />
                    );
                  })()
                ) : (
                  <img
                    src={entry.data.cover ?? fallbackCovers[index % fallbackCovers.length]}
                    alt={entry.data.title}
                  />
                )}
              </div>
              <div class="info">
                <div class="list-title">{entry.data.title}</div>
                <div class="list-meta">
                  <span>{formatDate(entry.data.date)}</span>
                  {entry.data.rating !== undefined && (
                    <span>{'★'.repeat(Math.round(entry.data.rating))}</span>
                  )}
                </div>
              </div>
              <div class="review">
                {entry.data.summary ?? '아직 감상문 요약이 없습니다.'}
              </div>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .culture-list {
    display: grid;
    gap: 24px;
  }

  .list-header {
    text-align: right;
  }

  .list-header h1 {
    margin: 0;
    font-family: 'JN_leanring', var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .list-header p {
    margin: 8px 0 0;
    color: var(--color-muted);
  }

  .list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0;
  }

  .list li {
    border-top: 1px solid rgba(27, 26, 23, 0.12);
  }

  .row {
    text-decoration: none;
    color: inherit;
    display: grid;
    grid-template-columns: 160px minmax(220px, 0.6fr) 1fr;
    gap: 22px;
    align-items: stretch;
    padding: 14px 0;
  }

  .thumb {
    width: 160px;
    height: 160px;
    min-width: 160px;
    border-radius: 10px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.35);
    border: 1px solid rgba(27, 26, 23, 0.12);
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .thumb-video {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  .info {
    display: grid;
    gap: 10px;
    align-content: center;
  }

  .list-title {
    font-size: 1.2rem;
    font-weight: 500;
  }

  .list-meta {
    display: flex;
    gap: 12px;
    font-size: 0.85rem;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }

  .review {
    color: var(--color-muted);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .empty {
    color: var(--color-muted);
  }

  @media (max-width: 860px) {
    .row {
      grid-template-columns: 120px 1fr;
      gap: 16px;
    }

    .thumb {
      width: 120px;
      height: 120px;
      min-width: 120px;
    }
  }
</style>
